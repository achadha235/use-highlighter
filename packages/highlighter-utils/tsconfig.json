{
    "compilerOptions": {
        "target": "ES2015",
        "jsx": "react",
        "module": "ES6",
        "rootDir": "./src",
        "moduleResolution": "Bundler",
        "noImplicitAny": true,
        "declaration": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "./src/stories",
        "dist"
    ]
}